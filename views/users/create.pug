extends ../layouts/common.pug

block content

    h1 CREAT USER

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="post")
        .form-group
            label(for='name') Name
            input#name.form-control(name="name", type="text", value=values ? values.name : '')
        .form-group
            label(for='phone') Phone
            input#phone.form-control(name="phone", type="text" value=values ? values.phone : '')

        button(class="btn btn-primary") Create
        a.btn.btn-danger.ml-5(href="/users") Back

